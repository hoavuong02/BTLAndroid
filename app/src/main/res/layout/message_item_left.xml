<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewSender"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/girl"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageViewSender"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/imageViewSender"
        android:text="Sender"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSender"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/imageViewSender"
        android:background="@drawable/bubble_white"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:text="Content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_below="@id/textViewContent"
        android:layout_alignStart="@id/textViewSender"
        android:layout_marginTop="8dp"
        android:background="@drawable/bubble_white"
        android:src="@drawable/girl" />

    <Button
        android:id="@+id/buttonDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_alignStart="@id/textViewSender"
        android:layout_marginTop="8dp"
        android:background="@drawable/bubble_white"
        android:text="Button"
        android:textColor="@color/black" />
</RelativeLayout>
